{
  "compilerOptions": {
    "esModuleInterop": true,
    // See https://devblogs.microsoft.com/typescript/typescript-and-babel-7/
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "removeComments": false,
    "resolveJsonModule": true,
    "downlevelIteration": true
  },
  "exclude": ["./examples/"]
}
