{
  "name": "commercetools-sdk-typescript",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "postinstall": "manypkg check && preconstruct dev",
    "generate": "manypkg run generate && yarn format",
    "format": "prettier --write '**/*.{js,ts,json,md}'",
    "build": "preconstruct build",
    "test": "jest --maxWorkers=2",
    "coverage": "codecov",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "postbuild": "webpack --mode=production --no-stats",
    "changeset:version-and-format": "changeset version && prettier --write --parser json '**/package.json'"
  },
  "workspaces": ["packages/*"],
  "dependencies": {
    "@babel/core": "7.16.12",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@changesets/changelog-github": "0.4.2",
    "@changesets/cli": "2.20.0",
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@manypkg/cli": "0.19.1",
    "@preconstruct/cli": "2.1.5",
    "@types/jest": "27.4.0",
    "@types/node": "^15.9.0",
    "babel-jest": "27.4.6",
    "buffer": "^6.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "codecov": "^3.8.3",
    "husky": "8.0.1",
    "ignore-loader": "^0.1.2",
    "jest": "27.4.7",
    "jest-junit": "13.0.0",
    "jest-watch-typeahead": "1.0.0",
    "lint-staged": "12.3.1",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "path-browserify": "^1.0.1",
    "prettier": "2.5.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "ts-jest": "27.1.3",
    "ts-loader": "^9.2.6",
    "tsc-files": "1.1.3",
    "typescript": "4.5.5",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,json,md}": ["prettier --write"],
    "*.ts": ["prettier --write", "tsc-files --noEmit"]
  },
  "preconstruct": {
    "packages": ["packages/*"]
  }
}
