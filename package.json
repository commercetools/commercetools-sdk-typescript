{
  "name": "commercetools-sdk-typescript",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "postinstall": "manypkg check && preconstruct dev",
    "generate": "manypkg run generate && yarn format",
    "format": "prettier --write '**/*.{js,ts,json,md}'",
    "build": "preconstruct build",
    "test": "jest --maxWorkers=2",
    "coverage": "codecov",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "postbuild": "webpack --no-stats",
    "changeset:version-and-format": "changeset version && prettier --write --parser json '**/package.json'"
  },
  "workspaces": ["packages/*"],
  "dependencies": {
    "@babel/core": "7.15.8",
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/preset-env": "7.15.8",
    "@babel/preset-typescript": "7.15.0",
    "@changesets/changelog-github": "0.4.1",
    "@changesets/cli": "2.17.0",
    "@commitlint/cli": "13.2.1",
    "@commitlint/config-conventional": "13.2.0",
    "@manypkg/cli": "0.18.0",
    "@preconstruct/cli": "2.1.5",
    "@types/jest": "27.0.2",
    "@types/node": "^15.9.0",
    "babel-jest": "27.3.1",
    "buffer": "^6.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "codecov": "^3.8.3",
    "husky": "7.0.4",
    "ignore-loader": "^0.1.2",
    "jest": "27.3.1",
    "jest-junit": "12.3.0",
    "jest-watch-typeahead": "0.6.5",
    "lint-staged": "11.2.4",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "path-browserify": "^1.0.1",
    "prettier": "2.4.1",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "stream-browserify": "^3.0.0",
    "ts-jest": "27.0.7",
    "ts-loader": "^9.2.6",
    "tsc-files": "1.1.2",
    "typescript": "4.4.4",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,json,md}": ["prettier --write"],
    "*.ts": ["prettier --write", "tsc-files --noEmit"]
  },
  "preconstruct": {
    "packages": ["packages/*"]
  }
}
