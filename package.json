{
  "name": "commercetools-sdk-typescript",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "postinstall": "manypkg check && preconstruct dev",
    "generate": "manypkg run generate && yarn format",
    "format": "prettier --write '**/*.{js,ts,json,md}'",
    "build": "preconstruct build",
    "test": "jest --maxWorkers=2",
    "coverage": "codecov -f 'coverage/lcov.info' -f 'coverage/clover.xml' -f 'coverage/coverage-final.json'",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "postbuild": "webpack --mode=production",
    "changeset:version-and-format": "changeset version && prettier --write --parser json '**/package.json'"
  },
  "workspaces": ["packages/*"],
  "dependencies": {
    "@babel/core": "7.21.3",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.21.0",
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.0",
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@manypkg/cli": "0.20.0",
    "@preconstruct/cli": "2.3.0",
    "@types/jest": "29.5.0",
    "@types/node": "^18.0.0",
    "babel-jest": "29.5.0",
    "buffer": "^6.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "codecov": "^3.8.3",
    "husky": "^7.0.4",
    "ignore-loader": "^0.1.2",
    "jest": "29.5.0",
    "jest-junit": "16.0.0",
    "jest-watch-typeahead": "2.2.2",
    "lint-staged": "12.5.0",
    "node-polyfill-webpack-plugin": "^2.0.0",
    "path-browserify": "^1.0.1",
    "prettier": "2.8.5",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.2.6",
    "tsc-files": "1.1.3",
    "typescript": "5.0.4",
    "webpack": "^5.53.0",
    "webpack-cli": "^5.0.0",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,json,md}": ["prettier --write"],
    "*.ts": ["prettier --write", "tsc-files --noEmit"]
  },
  "preconstruct": {
    "packages": ["packages/*"]
  }
}
